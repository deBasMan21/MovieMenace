<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_film_viewholder_poster"
        android:layout_width="110dp"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_image_placeholder"
        app:tint="@color/white"
        android:background="#999999"/>

    <TextView
        android:id="@+id/tv_film_viewholder_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Placeholder title"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_film_viewholder_poster"
        app:layout_constraintStart_toStartOf="@+id/iv_film_viewholder_poster"
        app:layout_constraintTop_toBottomOf="@+id/iv_film_viewholder_poster" />
</androidx.constraintlayout.widget.ConstraintLayout>