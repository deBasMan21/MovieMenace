<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingTop="32dp"
    tools:context=".ui.EditAccountActivity">

    <TextView
        android:id="@+id/tv_edit_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_edit_account_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/email"
        app:layout_constraintStart_toStartOf="@+id/tv_edit_account_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_account_name" />

    <TextView
        android:id="@+id/tv_edit_account_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/place"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_account_email" />

    <TextView
        android:id="@+id/tv_edit_account_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_account_place" />

    <TextView
        android:id="@+id/tv_edit_account_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_account_address" />

    <EditText
        android:id="@+id/et_edit_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_account_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_account_name"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_account_name"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/et_edit_account_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_account_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_account_email"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_account_email"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/et_edit_account_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_account_place"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_account_place"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_account_place"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/et_edit_account_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_account_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_account_address"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_account_address"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/et_edit_account_post_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:minEms="2"
        app:layout_constraintBottom_toBottomOf="@+id/et_edit_account_post_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_edit_account_post_num"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/et_edit_account_post_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minEms="4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_account_post"
        app:layout_constraintEnd_toStartOf="@+id/et_edit_account_post_char"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_account_post"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_account_post"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/bn_edit_account_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        android:text="@string/conf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_account_post" />

</androidx.constraintlayout.widget.ConstraintLayout>