<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.avans.moviemenace">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_mm_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_mm_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieMenace">
        <activity android:name=".ui.CreateListActivity"></activity>
        <activity android:name=".ui.ListToFilmActivity" />
        <activity android:name=".ui.FilmToListActivity" />
        <activity
            android:name=".ui.TicketDetailActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.EditAccountActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.ListDetailActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.FilmDetailActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MovieMenace.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>